<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>
        <property name="show_sql">false</property>
        
       <mapping resource="com/unilever/bancoideas/modelo/Departamento.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/TipoIdentificacion.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/Empleado.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/Persona.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/TipoUsuario.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/DetalleNominaEmpleado.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/NominaEmpleado.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/Cargo.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/LiquidacionNomina.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/Usuario.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/TipoHoraExtra.hbm.xml" />
         <mapping resource="com/unilever/bancoideas/modelo/Parametros.hbm.xml" />
         <mapping resource="com/unilever/bancoideas/modelo/LiquidacionHoraExtra.hbm.xml" />
        <mapping resource="com/unilever/bancoideas/modelo/HoraExtraEmpleado.hbm.xml" />
        
        
        <!-- Archivo de consultas -->
        <mapping resource="com/unilever/bancoideas/modelo/Consultas.hbm.xml" />
        
        
    </session-factory>
</hibernate-configuration>
